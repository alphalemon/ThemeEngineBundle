<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="althemes.stylesheets" type="collection">
            <parameter>css/al_themes.css</parameter>
        </parameter>
        <parameter key="althemes.base_template">AlphaLemonThemeEngineBundle:Theme:base.html.twig</parameter>
        <parameter key="althemes.base_theme_manager_template">AlphaLemonThemeEngineBundle:Themes:index.html.twig</parameter>
        <parameter key="althemes.panel_sections_template">AlphaLemonThemeEngineBundle:Themes:theme_panel_sections.html.twig</parameter>
        <parameter key="althemes.theme_skeleton_template">AlphaLemonThemeEngineBundle:Themes:theme_skeleton.html.twig</parameter>
        <!--<parameter key="althemes.app_themes_dir">%kernel.root_dir%/../src/AlphaLemon/Theme</parameter>-->
        <parameter key="althemes.info_valid_entries" type="collection">
            <parameter>title</parameter>
            <parameter>description</parameter>
            <parameter>author</parameter>
            <parameter>license</parameter>
            <parameter>website</parameter>
            <parameter>email</parameter>
            <parameter>version</parameter>
        </parameter>

        <parameter key="template_assets.class">AlphaLemon\ThemeEngineBundle\Core\Template\AlTemplateAssets</parameter>
        <parameter key="template.class">AlphaLemon\ThemeEngineBundle\Core\Template\AlTemplate</parameter>
        <parameter key="template_slots_factory.class">AlphaLemon\ThemeEngineBundle\Core\TemplateSlots\AlTemplateSlotsFactory</parameter>
    </parameters>

    <services>
        <service id="template_slots_factory" class="%template_slots_factory.class%">
            <argument type="service" id="translator" />
            <argument type="service" id="kernel" />
        </service>

        <service id="template_assets" class="%template_assets.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="template" class="%template.class%">
            <argument type="service" id="template_assets" />
            <argument type="service" id="kernel" />
            <argument type="service" id="template_slots_factory" />
        </service>
    </services>
</container>
